<html>

	<head>
		<!-- <link rel="stylesheet" type="text/css" href="/stylesheets/reset_css.css"> -->
		<!-- <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css"> -->
	</head>

	<body>
		
				<header>
				<h3>Bookmark Manager</h3>
				<h3>Welcome, <%= User.any? == false ? "" : @user.email %> </h3>
				</header>

		<section>
			
				<div>			
				<form action="/" method="POST">
					<input type="text" name="title" placeholder="title">
					<input type="text" name="url" placeholder="url">
					<input type="text" name="tags" placeholder="enter tags">
					<button name="route" value="add_link"> add </button>
					<button name="route" value="home">view all bookmarks</button>
				</form>
				</div>

				<table>
					<th colspan="2">
						
					</th>	
					<tr>
						<td>Links</td>
						<td>Tags</td>
					</tr>	
					<% @links.each do |link| %>
							<tr>
							<td>
								<a href="<%= link.url %>"><%= link.title %></a>
							</td>
							<td>
								<% link.tags.each do |tag| %>
								<a href="/tags/<%= tag.tag_name %>"><%= tag.tag_name %></a>
								<% end %>
							</td>
						</tr>
					<% end %>
				</table>

		</section>

	</body>


</html>